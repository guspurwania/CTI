<body class="login">
	<div class="menu-toggler sidebar-toggler">
	</div>

	<div class="logo">
		<h1 style="color:#FFF">
	    <span style="font-weight:bold">CTI</span> TRAINING
	    </h1>
		{# <a href="index.html">
		<img src="{{ base_url() }}assets/admin/layout2/img/logo-big.png" alt=""/>
		</a> #}
	</div>

	<!-- BEGIN LOGIN -->
	<div class="content">
		<!-- BEGIN LOGIN FORM -->
		<form class="login-form" action="{{ base_url() }}auth/login" method="post">
			<h3 class="form-title">Sign In</h3>
			{# <div class="alert alert-danger display-hide"> #}
			{% if message %}
				<div class="alert alert-danger">
					<button class="close" data-close="alert"></button>
					<span>
					{{ message|raw }} </span>
				</div>
			{% endif %}
			{# </div> #}

			<div class="alert alert-danger display-hide">
				<button class="close" data-close="alert"></button>
				<span>
				Masukkan Email dan Password yang benar </span>
			</div>

			<div class="form-group">
				<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
				<label class="control-label visible-ie8 visible-ie9">Username</label>
				<input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" id="identity" name="identity" value="{{ set_value('identity') }}" />
			</div>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">Password</label>
				<input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" id="password" value="{{ set_value('password') }}"/>
			</div>
			<div class="form-actions">
				<button type="submit" class="btn btn-success uppercase">Login</button>
				<label class="rememberme check">
				<input type="checkbox" name="remember" id="remember" value="1"/>Ingat Saya </label>
				<a href="javascript:;" id="forget-password" class="forget-password">Lupa Kata Sandi?</a>
			</div>
			{# <div class="login-options">
				<h4>Or login with</h4>
				<ul class="social-icons">
					<li>
						<a class="social-icon-color facebook" data-original-title="facebook" href="javascript:;"></a>
					</li>
					<li>
						<a class="social-icon-color twitter" data-original-title="Twitter" href="javascript:;"></a>
					</li>
					<li>
						<a class="social-icon-color googleplus" data-original-title="Goole Plus" href="javascript:;"></a>
					</li>
					<li>
						<a class="social-icon-color linkedin" data-original-title="Linkedin" href="javascript:;"></a>
					</li>
				</ul>
			</div> #}
			<div class="create-account">
				<p>
					<a href="javascript:;" id="register-btn" class="uppercase">Buat Akun Master Link</a>
				</p>
			</div>
		</form>
		<!-- END LOGIN FORM -->

		<!-- BEGIN FORGOT PASSWORD FORM -->
		<form class="forget-form" action="{{ base_url() }}auth/forgot_password" method="post">
			<h3>Lupa Kata Sandi ?</h3>
			<p align="center">
				 Masukkan Alamat E-mail Anda untuk mengkonfigurasi ulang kata sandi. 
			</p>
			<div class="form-group">
				<input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" name="identity" id="identity" value="{{ set_value('identity') }}" />
			</div>
			<div class="form-actions">
				<button type="button" id="back-btn" class="btn btn-default">Kembali</button>
				<button type="submit" class="btn btn-success uppercase pull-right">Submit</button>
			</div>
		</form>
		<!-- END FORGOT PASSWORD FORM -->

		<!-- BEGIN REGISTRATION FORM -->
		<form class="register-form" action="{{ base_url() }}auth/register" method="post" enctype="multipart/form-data">
			<h3>Pendaftaran Master Link</h3>
			<p class="hint">
				 Masukkan detail data personal Anda pada form berikut:
			</p>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">Nama Lengkap</label>
				<input class="form-control placeholder-no-fix" type="text" placeholder="Nama Lengkap" name="full_name" value="{{ set_value('full_name') }}" />
			</div>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">Email</label>
				<input class="form-control placeholder-no-fix" type="email" autocomplete="off" placeholder="Email" name="email" value="{{ set_value('email') }}"/>
			</div>
			<div class="form-group">
				<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
				<label class="control-label visible-ie8 visible-ie9">Telepon</label>
				<input class="form-control placeholder-no-fix" type="text" placeholder="Nomor Telepon" name="phone" value="{{ set_value('phone') }}" />
			</div>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">Nama Bank</label>
				<input class="form-control placeholder-no-fix" type="text" placeholder="Nama Bank" name="bank_name" value="{{ set_value('bank_name') }}"/>
			</div>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">No. Rekening</label>
				<input class="form-control placeholder-no-fix" type="text" placeholder="Nomor Rekening" name="account_number"value="{{ set_value('account_number') }}"/>
			</div>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">Atas Nama</label>
				<input class="form-control placeholder-no-fix" type="text" placeholder="Nomor Rekening Atas Nama" name="account_name" value="{{ set_value('account_name') }}"/>
			</div>
			<div class="form-group">
				<div class="input-group">
					<span class="input-group-addon">Foto</span>
					<input class="form-control placeholder-no-fix" type="file" placeholder="Foto" name="photo"/>
				</div>
			</div>
			<div class="form-group">
				<div class="input-group">
					<span class="input-group-addon">KTP</span>
					<input class="form-control placeholder-no-fix" type="file" placeholder="KTP" name="ktp"/>
				</div>
			</div>
			<div class="form-group">
				<div class="input-group">
					<span class="input-group-addon">KK</span>
					<input class="form-control placeholder-no-fix" type="file" placeholder="KK" name="kk"/>
				</div>
			</div>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">Alamat</label>
				<input class="form-control placeholder-no-fix" type="text" placeholder="Alamat" name="address" value="{{ set_value('address') }}"/>
			</div>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">Kecamatan</label>
				<input class="form-control placeholder-no-fix" type="text" placeholder="Kecamatan" name="sub_district" value="{{ set_value('sub_district') }}"/>
			</div>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">Kabupaten</label>
				<input class="form-control placeholder-no-fix" type="text" placeholder="Kabupaten" name="district" value="{{ set_value('district') }}"/>
			</div>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">Provinsi</label>
				<input class="form-control placeholder-no-fix" type="text" placeholder="Provinsi" name="province" value="{{ set_value('province') }}"/>
			</div>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">Pekerjaan</label>
				<input class="form-control placeholder-no-fix" type="text" placeholder="Pekerjaan" name="job" value="{{ set_value('job') }}"/>
			</div>
			<p class="hint">
				 Masukkan data akun Anda pada form berikut:
			</p>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">Username</label>
				<input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="identity" value="{{ set_value('username') }}"/>
			</div>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">Kata Sandi</label>
				<input class="form-control placeholder-no-fix" type="password" autocomplete="off" id="register_password" placeholder="Kata Sandi" name="password" value="{{ set_value('password') }}"/>
			</div>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">Ulang Kata Sandi</label>
				<input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Ulang Kata Sandi" name="password_confirm" value="{{ set_value('password_confirm') }}"/>
			</div>
			<div class="form-group margin-top-20 margin-bottom-20">
				<label class="check">
				<input type="checkbox" name="tnc"/> Saya setuju dengan <a href="javascript:;">
				Persyaratan </a>
				& <a href="javascript:;">
				Ketentuan </a>
				</label>
				<div id="register_tnc_error">
				</div>
			</div>
			<div class="form-actions">
				<button type="button" id="register-back-btn" class="btn btn-default">Kembali</button>
				<button type="submit" id="register-submit-btn" class="btn btn-success uppercase pull-right">Submit</button>
			</div>
		</form>
		<!-- END REGISTRATION FORM -->
	</div>

